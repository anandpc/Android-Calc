<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="5"
    android:columnCount="4"
    android:paddingLeft="10dp">

    <Button
        android:id="@+id/btn_clear_all"
        android:layout_margin="2dp"
        android:onClick="all_clear"
        android:text="AC"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_margin="2dp"
        android:onClick="clear"
        android:text="C"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_div"
        android:layout_margin="2dp"
        android:onClick="div"
        android:text="/"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_mul"
        android:layout_margin="2dp"
        android:onClick="mul"
        android:text="@string/x"
        android:textSize="30sp" />
    <Button
        android:id="@+id/btn_7"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="7"
        />
    <Button
        android:id="@+id/btn_8"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="8"
        />
    <Button
        android:id="@+id/btn_9"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="9"
        />
    <Button
        android:id="@+id/btn_sub"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="-"
        android:onClick="sub"
        />
    <Button
        android:id="@+id/btn_4"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="4"
        />
    <Button
        android:id="@+id/btn_5"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="5"
        />
    <Button
        android:id="@+id/btn_6"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="6"
        />
    <Button
        android:id="@+id/btn_add"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="+"
        android:onClick="add"
        />
    <Button
        android:id="@+id/btn_1"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="1"
        />
    <Button
        android:id="@+id/btn_2"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="2"
        />
    <Button
        android:id="@+id/btn_3"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="3"
        />
    <Button
        android:id="@+id/btn_eq"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="="
        />
    <Button
        android:id="@+id/btn_0"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="0"
        />
    <Button
        android:id="@+id/btn_00"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="00"
        />
    <Button
        android:id="@+id/btn_dot"
        android:layout_margin="0dp"
        android:textSize="30sp"
        android:text="."
        android:onClick="dec"
        />

    <Button
        android:id="@+id/btn_mod"
        android:layout_margin="0dp"
        android:text="%"
        android:textSize="30sp"
        android:onClick="percent"/>
</GridLayout>